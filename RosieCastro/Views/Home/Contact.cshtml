@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutResume.cshtml";
}

<div class="section-name">
    <h1 class="title">Contact</h1>
</div>
<div class="maintext">
    <div class="row-fluid">
        <div class="">
            <form action="send_mail.php" id="contactinfo">
                <label><strong>Name</strong> <em>(required)</em></label>
                <div class="input-append">
                    <input type="text" name="Name" required>
                    <span class="add-on"><i class="icon-user"></i></span>
                </div>
                <label><strong>Subject</strong> <em>(required)</em></label>
                <div class="input-append">
                    <input type="text" name="Subject" required>
                    <span class="add-on"><i class="icon-comment"></i></span>
                </div>
                <label><strong>Email</strong> <em>(required)</em></label>
                <div class="input-append">
                    <input type="email" name="Email" required>
                    <span class="add-on"><i class="icon-mail"></i></span>
                </div>
                <label><strong>Message</strong></label>
                <textarea name="Message"></textarea>
                <br>
                <div class="text-right">
                    <input type="submit" class="btn btn-primary btn-large" value="Send it">
                </div>
            </form>
        </div>
    </div>
</div>
